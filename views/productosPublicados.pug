extends ./layout/administrador

block contenido 
    div.py-2
        h2.text-center.text-2xl.font-extrabold= pagina 
     
    //- SECCION MIS PRODUCTOS
    section(class="flex items-center justify-center container mx-auto")
        ul(class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-3 gap-2")
            each producto in productos
                li(class="rounded-xl shadow-lg bg-gray-200")
                    div(class="p-5 flex flex-col")
                        div(class="rounded-xl overflow-hidden w-auto h-60")
                            img(src=`/uploads/${producto.imagenProducto}`, alt=producto.nombreProducto)
                        h5(class="text-2xl md:text-3xl font-medium mt-3")= producto.nombreProducto
                        div(class="space-y-2")
                            div(class="flex justify-between mt-3") 
                                p(class="text-slate-900 text-lg font-bold") Color: 
                                    span(class="text-slate-500 text-lg font-normal")= producto.colorProducto
                                p(class="text-slate-900 text-lg font-bold") Talla: 
                                    span(class="text-slate-500 text-lg font-normal")= producto.tallaProducto
                            div(class="flex justify-between mt-3") 
                                p(class="text-slate-900 text-lg font-bold") Categoria: 
                                    span(class="text-slate-500 text-lg font-normal")= producto.categoria.categoriaProducto
                                p(class="text-slate-900 text-lg font-bold") Stock: 
                                    span(class="text-slate-500 text-lg font-normal")= producto.cantidadProducto
                            div(class="flex ") 
                                p(class="text-slate-900 text-lg font-bold") Descripción: 
                                    span(class="text-slate-500 text-lg font-normal")= producto.descripcionProducto
                            div(class="flex justify-end") 
                                p(class="text-slate-700 text-md font-semibold") Publicada por: 
                                    span(class="text-slate-400 text-sm font-normal")= producto.usuario.nombre
                        
                        a(href="#" class="text-center bg-blue-400 text-blue-700 py-2 rounded-lg font-semibold mt-4 hover:bg-blue-300 focus:scale-95 transition-all duration-200 ease-out") Ver más